# Comprehensive .dockerignore for Next.js projects

# Version Control
.git
.github
.gitignore
.gitattributes

# Node.js & Dependencies
node_modules
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Development environments
.idea
.vscode
.DS_Store
Thumbs.db

# Build outputs
.next
out
dist
build
coverage
*.tsbuildinfo

# Testing
__tests__
__mocks__
*.test.*
*.spec.*

# Environment and secrets
.env*
\!.env.example

# Logs and debugging
logs
*.log

# Documentation
*.md
LICENSE
docs
documentation

# Temporary files
.tmp
.temp
.cache
.eslintcache

# Explicitly include only these files (critical for reducing build context size)
\!package.json
\!package-lock.json
\!next.config.js
\!tsconfig.json
\!tailwind.config.js
\!postcss.config.js
\!app/
\!src/
\!public/
\!prisma/schema.prisma
