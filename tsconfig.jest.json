{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["jest", "node"]
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.ts",
    "test/**/*.ts",
    "test/**/*.tsx",
    "jest.setup.ts",
    "jest-setup-react.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": ["node_modules", ".next", "e2e"]
} 