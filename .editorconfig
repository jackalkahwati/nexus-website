# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles use real tabs
[Makefile]
indent_style = tab

# Batch files use CRLF
[*.{cmd,bat}]
end_of_line = crlf

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 0

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4

# Java files
[*.java]
indent_style = space
indent_size = 4

# C# files
[*.cs]
indent_style = space
indent_size = 4

# XML files
[*.{xml,xsd,xslt}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS, SCSS, and Less files
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSX, and TSX files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Git merge files
[*.{orig,rej}]
indent_style = none
indent_size = none

# Log files
[*.log]
indent_style = none
indent_size = none

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Windows INI files
[*.{ini,conf}]
indent_style = space
indent_size = 4

# Visual Studio Code settings
[.vscode/*]
indent_style = space
indent_size = 2

# GitHub workflow files
[.github/workflows/*.y?ml]
indent_style = space
indent_size = 2
