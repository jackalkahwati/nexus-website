# Enforce Node.js version from package.json
engine-strict = true
node-version = 20

# Dependency resolution
legacy-peer-deps = true
package-lock = true
save-exact = true
auto-install-peers = true
prefer-offline = true
prefer-frozen-lockfile = true

# Network and performance
fetch-retries = 5
fetch-timeout = 300000
maxsockets = 20
prefer-online = false
progress = true

# Security
audit = true
fund = false

# Cache settings
cache = ~/.npm
cache-max = 0
cache-min = 10

# Logging
loglevel = "warn"
color = true

# Registry configuration
registry = https://registry.npmjs.org/
@types:registry = https://registry.npmjs.org/
@babel:registry = https://registry.npmjs.org/
@next:registry = https://registry.npmjs.org/
@prisma:registry = https://registry.npmjs.org/
@radix-ui:registry = https://registry.npmjs.org/
@testing-library:registry = https://registry.npmjs.org/
@typescript-eslint:registry = https://registry.npmjs.org/

# GitHub Packages configuration
# @YOUR_ORG:registry=https://npm.pkg.github.com
# //npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}

# Optional: Use npm Enterprise if needed
# @your-enterprise:registry=https://your-enterprise-npm-registry.com
# //your-enterprise-npm-registry.com/:_authToken=${NPM_TOKEN}